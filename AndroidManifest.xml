<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.enigma.pandamonium"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
		android:largeHeap="true">
        <activity
            android:name="com.enigma.pandamonium.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait" 
            android:name="com.enigma.pandamonium.OptionsActivity"
            android:label="@string/title_activity_options" >
        </activity>
        <activity
            android:name="com.enigma.pandamonium.WalkThroughActivity"
            android:label="@string/title_activity_rules"
            android:parentActivityName="com.enigma.pandamonium.MainActivity"
            android:screenOrientation="portrait"  >
            
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.boardg.MainActivity" />
        </activity>
        <activity
            android:name="com.enigma.pandamonium.GameScreenActivity"
            android:label="@string/title_activity_game_screen"
            android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="com.enigma.pandamonium.Options2Activity"
            android:label="@string/title_activity_options2" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.enigma.pandamonium.HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="com.enigma.pandamonium.StatsActivity"
            android:label="Statistics"
            android:screenOrientation="portrait"  >
        </activity>
        <activity android:name="com.facebook.MainActivity"
                  android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar"
                  android:label="@string/app_name" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/APP_ID"/>
        <provider android:authorities="com.facebook.app.FacebookContentProvider253546665020541"
                  android:name="com.facebook.FacebookContentProvider"
                  android:exported="true"/>
    </application>

</manifest>
