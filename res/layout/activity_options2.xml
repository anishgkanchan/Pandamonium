<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_skin"
    android:gravity="center_vertical"
    tools:context="com.enigma.pandamonium.Options2Activity" >

    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/title"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">

        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_green"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="Sound"
            android:layout_marginRight="10dp"
            android:textSize="18sp"/>
        
        <ImageView android:layout_height="wrap_content"
            android:id="@+id/img_sound"
            android:layout_width="wrap_content"
            android:src="@drawable/audio_on"/>
        
        
    
      
        
    </LinearLayout>
    <Button
        android:id="@+id/singlePlayer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttonselector"
        android:text="Single Player" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">
        
        <ImageView android:layout_height="wrap_content"
            android:id="@+id/lft_arrow"
            android:layout_width="wrap_content"
            android:src="@drawable/left"
            android:visibility="invisible"
            android:layout_weight="1"></ImageView>
        
        <TextView 
            android:id="@+id/txt_dificulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_green"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="Easy"
            android:textSize="18sp"
            android:layout_weight="2"/>
        
        <ImageView android:layout_height="wrap_content"
            android:id="@+id/rght_arrow"
            android:layout_width="wrap_content"
            android:src="@drawable/right"
            android:layout_weight="1"/>
        
        
    
      
        
    </LinearLayout>
    <Button
        android:id="@+id/multiPlayer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttonselector"
        android:layout_marginBottom="15dp"
        android:text="Two Player" />


  <Button
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttonselector"
        android:text="Statistics" />
  
    <Button
        android:id="@+id/achievements"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttonselector"
        android:text="Achievements" />
</LinearLayout>